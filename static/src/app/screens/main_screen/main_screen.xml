<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="refuge_aventuriers.MainScreen">
        <div class="refuge-main-screen">
            <header class="refuge-header">
                <div class="header-content">
                    <img
                        class="refuge-logo"
                        src="/refuge_aventuriers/static/src/app/img/logo.png"
                        alt="Logo du Refuge des Aventuriers"
                        t-on-click="() => refuge.showScreen('MainScreen')"
                    />
<!--                    <h1 class="refuge-title">Le Refuge des Aventuriers</h1>-->
                </div>
            </header>

            <main class="refuge-main-content">
                <div class="welcome-card">
                    <h2 class="welcome-title">Bienvenue, Aventurier</h2>
                    <p class="welcome-text">
                        Entrez dans un monde de légendes, de boissons et de récits épiques
                    </p>
                    <button class="enter-button" t-on-click="() => refuge.showScreen('MenuScreen')">
                        Entrer au Refuge
                    </button>
                </div>
            </main>

            <footer class="refuge-footer">
                <p class="footer-text">© 2025 Le Refuge des Aventuriers</p>
            </footer>
        </div>
    </t>
</templates>
